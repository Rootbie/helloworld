node{
    stage('1. SCM Checkout'){
        sh "git url: https://github.com/Rootbie/helloworld"
    }

    stage('2. Maven build'){
        sh "mvn clean package -f DevOps/helloworld/pom.xml"
    }

    stage('3. Build Docker image'){
        sh "docker build -t trinh00thien/demo-hello:v1 DevOps/helloworld"
    }

    stage('4. Remove container'){
        sh "docker rm -f web-hello"
    }

    stage('5. Deploy Docker image to Tomcat'){
        sh "docker run -p 23456:8080 -d --name web-hello trinh00thien/demo-hello:v1"
    }

    stage('6. Upload Docker to Docker repo'){
        sh "docker push trinh00thien/demo-hello:v1"
    }
}
